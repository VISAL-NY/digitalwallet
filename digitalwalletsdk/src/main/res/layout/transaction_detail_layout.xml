<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <View
        android:id="@+id/tran_detail_indicator"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/tran_bg_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="5dp"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tran_icon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call_received_24px"/>
        </FrameLayout>
        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tran_tran_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tran_tran_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subtitle"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"/>
    <View
        android:id="@+id/tran_detail_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_tran_id_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="transaction Id"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_tran_id_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 19303838"
            android:layout_weight="1"
            android:gravity="end"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_pay_from_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment From"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_pay_from_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 19303838"
            android:layout_weight="1"
            android:gravity="end"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_original_amount_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Original amount"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_original_amount_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 19303838"
            android:layout_weight="1"
            android:gravity="end"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_fee_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Free amount"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_fee_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 19303838"
            android:layout_weight="1"
            android:gravity="end"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_reference_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reference"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_reference_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 19303838"
            android:layout_weight="1"
            android:gravity="end"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_tran_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="tran date"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tran_detail_tran_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 19303838"
            android:layout_weight="1"
            android:gravity="end"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Space
        android:layout_width="0dp"
        android:layout_height="40dp"/>

    <View
        android:id="@+id/tran_detail_dash_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="10dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <FrameLayout
                    android:id="@+id/download_container"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#C11818"
                    android:layout_centerHorizontal="true"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/download_24px"
                        android:layout_gravity="center"
                        />
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:layout_below="@+id/download_container"
                    android:textSize="11sp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="2dp"
                    android:textColor="#000000"
                    />
            </RelativeLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <FrameLayout
                    android:id="@+id/share_container"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#B52020"
                    android:layout_centerHorizontal="true"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/upload_24px"
                        android:layout_gravity="center"
                        />
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="share"
                    android:textSize="11sp"
                    android:layout_below="@+id/share_container"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="2dp"
                    android:textColor="#000000"
                    />
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>