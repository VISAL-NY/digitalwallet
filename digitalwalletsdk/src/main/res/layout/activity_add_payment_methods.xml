<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.MainPaymentMethodsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/apm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00E91E63"
        app:title=" ">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/apm_navigation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_ios_24px"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/apm_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Payment Method"/>

    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/apm_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/apm_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.appcompat.widget.LinearLayoutCompat>