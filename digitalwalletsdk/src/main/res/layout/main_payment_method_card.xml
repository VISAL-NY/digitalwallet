<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_payment_method_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#9C27B0"
    android:padding="20dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="20dp">

    <FrameLayout
        android:id="@+id/main_payment_method_bg_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#2196F3"
        android:padding="10dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_payment_method_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/baseline_credit_card_24"/>
    </FrameLayout>
    <Space
        android:layout_width="30sp"
        android:layout_height="0sp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_payment_method_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Card/Debit Carddkkdkkdkkdkdkkdkdk"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center"/>

</androidx.appcompat.widget.LinearLayoutCompat>